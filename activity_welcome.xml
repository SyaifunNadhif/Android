<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/c3"
    tools:context=".WelcomeActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/wlcome"/>

    <TextView
        android:layout_marginTop="10px"
        android:id="@+id/text_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="GOHIKE"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:text="Once again, we have not conquered the peak, but yourself"
        android:textColor="@color/white"/>

    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="200dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn1"
            android:layout_margin="30px"
            android:text="SIGN UP"
            app:backgroundTint="@null"
            android:padding="10dp"
            android:background="@drawable/button_sign_up"
            android:layout_width="150dp"
            android:onClick="onButtonSignUpClicked"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn2"
            android:layout_margin="30px"
            app:backgroundTint="@null"
            android:padding="10dp"
            android:background="@drawable/button_sign_up"
            android:text="SIGN IN"
            android:onClick="onButtonSignINClicked"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>


    </LinearLayout>




</LinearLayout>